<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Task Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white min-h-screen flex flex-col items-center p-6">

  <h1 class="text-3xl font-bold mb-6">Task Manager</h1>

  <!-- Form -->
  <div class="form bg-zinc-800 p-6 rounded-xl w-full max-w-md mb-8 shadow-md">
    <form action="/create" method="post" class="flex flex-col space-y-4">
      <input type="text" placeholder="Title" name="title"class="p-3 rounded bg-zinc-700 text-white outline-none focus:ring-2 focus:ring-pink-500">
      <textarea placeholder="Description" name="description" class="p-3 rounded bg-zinc-700 text-white outline-none h-28 resize-none focus:ring-2 focus:ring-pink-500"></textarea>
      <input type="submit" value="Create Task" class="bg-pink-500 hover:bg-pink-600 text-white font-semibold py-2 px-4 rounded cursor-pointer transition duration-300">
    </form>
  </div>

  <!-- Tasks Section -->
  <div class="tasks w-full max-w-md space-y-4">
    <% if (files.length > 0) { %>
      <% files.forEach(function(val) { %>
        <div class="task-card bg-zinc-800 p-4 rounded-lg shadow-md border border-zinc-700">
          <h2 class="text-xl font-semibold mb-1"><%= val %></h2>
          <a class="text-blue-500 inline-block mt-3" href="'/file/<%=val%>">Read more</a>
        </div>
      <% }); %>
    <% } else { %>
      <h3>Add Task</h3>
    <% } %>
  </div>

</body>
</html>
