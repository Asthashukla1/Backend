<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Task Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Feather Icons CDN -->
  <script src="https://unpkg.com/feather-icons"></script>
</head>
<body class="bg-zinc-900 text-white min-h-screen flex flex-col p-8">

  <h1 class="text-4xl font-bold mb-8 text-center text-pink-400">Task Manager</h1>

  <!-- Two Column Layout -->
  <div class="flex flex-col md:flex-row gap-8 justify-center w-full max-w-6xl mx-auto">
    
    <!-- Left: Form -->
    <div class="form bg-zinc-800 p-6 rounded-xl w-full md:w-1/2 shadow-md">
      <h2 class="text-2xl font-semibold mb-4 text-white">Create Task</h2>
      <form action="/create" method="post" class="flex flex-col space-y-4">
        <input type="text" placeholder="Title" name="title" class="p-3 rounded bg-zinc-700 text-white outline-none focus:ring-2 focus:ring-pink-500" required>
        <textarea placeholder="Description" name="description" class="p-3 rounded bg-zinc-700 text-white outline-none h-28 resize-none focus:ring-2 focus:ring-pink-500" required></textarea>
        <input type="submit" value="Create Task" class="bg-pink-500 hover:bg-pink-600 text-white font-semibold py-2 px-4 rounded cursor-pointer transition duration-300">
      </form>
    </div>

    <!-- Right: Tasks -->
    <div class="tasks w-full md:w-1/2 space-y-4">
      <% if (tasks.length > 0) { %>
        <% tasks.forEach(function(task) { %>
          <div class="task-card bg-zinc-800 p-5 rounded-lg shadow-md border border-zinc-700 relative group">
            
            <!-- Icons Top Right -->
            <div class="absolute top-3 right-3 flex gap-3 opacity-80 group-hover:opacity-100 transition">
              <a href="/edit/<%= task.filename %>" title="Edit" class="text-yellow-400 hover:text-yellow-300">
                <i data-feather="edit" class="w-5 h-5"></i>
              </a>
              <form action="/delete/<%= task.filename %>" method="POST" onsubmit="return confirm('Are you sure you want to delete <%= task.filename %>?');">
                <button type="submit" title="Delete" class="text-red-500 hover:text-red-400">
                  <i data-feather="trash-2" class="w-5 h-5"></i>
                </button>
              </form>
            </div>

            <h2 class="text-xl font-semibold text-pink-400 break-all pr-10"><%= task.filename %></h2>
            
            <p class="text-zinc-300 text-sm mt-2 truncate"><%= task.content %></p>

            <div class="flex flex-wrap gap-3 mt-3">
              <a href="/file/<%= task.filename %>" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-1 rounded text-sm transition">Read</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <h3 class="text-lg text-zinc-400">No tasks yet. Create one!</h3>
      <% } %>
    </div>
  </div>

  <script>
    feather.replace()
  </script>

</body>
</html>
